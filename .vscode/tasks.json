{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build EFI Application",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make clean && make",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Check Application",
            "type": "shell",
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "command": "nim check ${workspaceRoot}/stubs/app.nim",
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ]
}